# Development environment

# Flask / Backend
FLASK_ENV=development
DEBUG=True
SECRET_KEY=dev-secret-key
JWT_SECRET_KEY=dev-jwt-secret

# Database (local SQLite for now)
DB_FILE=smart_bonus.db
# DATABASE_URL is intentionally not set to use SQLite fallback

# CORS
CORS_ORIGINS=*

# Telegram
TELEGRAM_BOT_TOKEN=
VITE_TELEGRAM_BOT_USERNAME=

# Exports / Backups
EXPORT_PATH=./exports
BACKUP_ENABLED=false

# Pagination and security
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT=300

# Disable Celery/Redis in dev
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
